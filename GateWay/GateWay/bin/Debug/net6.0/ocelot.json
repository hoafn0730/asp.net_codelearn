        {
          "Host": "localhost",
          "Port": 44390
        }
      ],
      "UpstreamPathTemplate": "/api-user/{controller}/{action}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ],
      "Key": "user"
